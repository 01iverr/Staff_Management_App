<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/show_pays_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/payments"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_view_payments"
        android:layout_width="411dp"
        android:layout_height="497dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="80dp"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_pays_title"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_show_payments_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="@+id/show_pays_title"
        app:layout_constraintStart_toStartOf="@+id/show_pays_title"
        app:layout_constraintTop_toBottomOf="@+id/list_view_payments" />

    <TextView
        android:id="@+id/show_pays_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/show_pays_title"
        app:layout_constraintStart_toEndOf="@+id/show_pays_title"
        app:layout_constraintTop_toTopOf="@+id/show_pays_title" />

</androidx.constraintlayout.widget.ConstraintLayout>