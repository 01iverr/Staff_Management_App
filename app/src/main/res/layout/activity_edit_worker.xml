<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_worker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/edit_worker"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_edit_worker_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/first_name"

        app:layout_constraintEnd_toEndOf="@+id/edit_worker_title"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_edit_worker_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/last_name"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="@+id/edit_worker_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_edit_worker_email"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginTop="34dp"
        android:text="@string/email_address"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_first_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_first_name"
        app:layout_constraintTop_toBottomOf="@+id/editNewFirstName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/view_edit_worker_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/phone_number"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_last_name"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_last_name"
        app:layout_constraintTop_toBottomOf="@+id/editNewLastName" />

    <Button
        android:id="@+id/button_save_edited_worker"
        android:layout_width="120sp"
        android:layout_height="54dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_add_new_agreement"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/button_add_new_agreement"
        app:layout_constraintTop_toBottomOf="@+id/button_add_new_agreement"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/view_edit_worker_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/department"
        app:layout_constraintEnd_toEndOf="@+id/edit_worker_title"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/edit_worker_title"
        app:layout_constraintTop_toBottomOf="@+id/editNewPhoneNumber" />

    <Button
        android:id="@+id/button_add_new_agreement"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="@string/add_agreement"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_department"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_department"
        app:layout_constraintTop_toBottomOf="@+id/editNewDepartmentName" />

    <EditText
        android:id="@+id/editNewFirstName"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:autofillHints="First Name"
        android:ems="10"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_secondary"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_first_name"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_first_name"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_worker_first_name"
        tools:ignore="LabelFor,DuplicateSpeakableTextCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/editNewLastName"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:autofillHints="Last Name"
        android:ems="10"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_secondary"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_last_name"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_last_name"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_worker_last_name"
        tools:ignore="LabelFor,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/editNewEmailAddress"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:autofillHints="email"
        android:ems="10"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/design_default_color_secondary"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_email"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_email"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_worker_email"
        tools:ignore="LabelFor,DuplicateSpeakableTextCheck,TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/editNewPhoneNumber"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:autofillHints="phone"
        android:ems="10"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:textColor="@color/design_default_color_secondary"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_phone"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_phone"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_worker_phone"
        tools:ignore="LabelFor,DuplicateSpeakableTextCheck,TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/editNewDepartmentName"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/department"
        android:importantForAutofill="no"
        android:inputType="textShortMessage"
        android:textColor="@color/design_default_color_secondary"
        android:textColorHint="@color/design_default_color_secondary_variant"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_department"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_department"
        app:layout_constraintTop_toBottomOf="@+id/view_edit_worker_department"
        tools:ignore="LabelFor,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/buttonEWCancel"
        android:layout_width="120sp"
        android:layout_height="54dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_add_new_agreement"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/button_add_new_agreement"
        app:layout_constraintTop_toBottomOf="@+id/button_add_new_agreement"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/button_delete_worker"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="@string/delete_worker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_edit_worker_department"
        app:layout_constraintStart_toStartOf="@+id/view_edit_worker_department"
        app:layout_constraintTop_toBottomOf="@+id/buttonEWCancel"
        app:layout_constraintVertical_bias="0.309" />

</androidx.constraintlayout.widget.ConstraintLayout>